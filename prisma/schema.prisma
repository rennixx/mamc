generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Auth ─────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String? // Hashed password for credentials auth
  image         String?
  role          UserRole  @default(ADMIN)
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum UserRole {
  ADMIN
  STAFF
}

// ─── Horses ───────────────────────────────────────────

model Horse {
  id               String          @id @default(cuid())
  name             String
  breed            String
  age              Int
  gender           HorseGender
  color            String
  description      String?
  image            String?
  available        Boolean         @default(true)
  unavailableReason String?
  suitableFor      ExperienceLevel[]
  maxWeight        Int?
  bookings         BookingHorse[]
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@map("horses")
}

enum HorseGender {
  MALE
  FEMALE
  STALLION
  MARE
  GELDING
}

enum ExperienceLevel {
  BEGINNER
  NOVICE
  INTERMEDIATE
  ADVANCED
}

// ─── Bookings ─────────────────────────────────────────

model Booking {
  id              String        @id @default(cuid())
  service         ServiceType
  name            String
  email           String
  phone           String
  experienceLevel String
  groupSize       Int           @default(1)
  specialRequests String?
  date            DateTime      @db.Date
  time            String        // HH:MM format
  status          BookingStatus @default(PENDING)
  notes           String?       // Admin notes
  horses          BookingHorse[]
  location        BookingLocation?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("bookings")
}

model BookingHorse {
  id        String  @id @default(cuid())
  bookingId String
  horseId   String
  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  horse     Horse   @relation(fields: [horseId], references: [id], onDelete: Cascade)

  @@unique([bookingId, horseId])
  @@map("booking_horses")
}

model BookingLocation {
  id          String  @id @default(cuid())
  bookingId   String  @unique
  ip          String
  city        String?
  region      String?
  country     String?
  countryCode String?
  latitude    Float?
  longitude   Float?
  org         String?
  booking     Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@map("booking_locations")
}

enum ServiceType {
  SAFARI
  ACADEMY
  PRIVATE
  EVENT
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

// ─── Calendar ─────────────────────────────────────────

model CalendarDay {
  id             String   @id @default(cuid())
  date           DateTime @unique @db.Date
  blocked        Boolean  @default(false)
  blockReason    String?
  availableSlots String[] // ["10:00", "14:00", "16:00"]
  capacity       Int?     // max bookings per day
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("calendar_days")
}

model BookedSlot {
  id        String   @id @default(cuid())
  date      DateTime @db.Date
  time      String   // HH:MM
  bookingId String
  createdAt DateTime @default(now())

  @@unique([date, time, bookingId])
  @@map("booked_slots")
}

// ─── Contact Messages ─────────────────────────────────

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contact_messages")
}
